@{
    Layout = "_Layout";
}

@model pots.Models.LidModel

<h2>Add a New Lid</h2>

<form asp-action="Create" asp-controller="Lid">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="NAME" required>
    </div>
    <div class="form-group">
        <label for="diameter">Diameter</label>
        <input type="number" step="0.01" class="form-control" id="diameter" name="DIAMETER" required> cm
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
